
<% @pictures.each do |picture| %>
  <p><%= link_to image_tag picture.image.url(:medium)  %></p>
  <p><%= link_to "Remove picture #{picture.image_file_name}", picture_path(picture), method: :delete %></p>
  <p><%= link_to "View picture #{picture.image_file_name}", picture_path(picture) %></p>
<% end %>

<%= "No pictures yet" unless @pictures.any? %>

<a href="pictures/new">Add a picture</a>
